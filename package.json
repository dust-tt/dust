{
  "name": "dust-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "front",
    "front-spa",
    "sparkle",
    "connectors",
    "cli",
    "extension",
    "viz",
    "eslint-plugin-dust",
    "sdks/js"
  ],
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "install:all": "npm install",
    "knip": "knip",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome check --formatter-enabled=true --linter-enabled=false .",
    "format:lefthook": "npx @biomejs/biome format --write"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "eslint-plugin-react-hooks": {
      "zod-validation-error": "^4.0.0"
    },
    "@types/react": "^18.3.18"
  }
}
