{
  "name": "mcp-dust-server",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for Dust.tt",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch=\"**/tests/unit/**/*.test.ts\"",
    "test:integration": "jest --testMatch=\"**/tests/integration/**/*.test.ts\"",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "test:clear-cache": "jest --clearCache",
    "prepare": "husky install",
    "tasks": "node scripts/task-manager.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/mcp-dust-server.git"
  },
  "keywords": [
    "mcp",
    "dust",
    "ai",
    "model-context-protocol",
    "task-master"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/mcp-dust-server/issues"
  },
  "homepage": "https://github.com/your-username/mcp-dust-server#readme",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.0.3",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "express": "^5.1.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.4",
    "jsonwebtoken": "^9.0.2",
    "mock-http-server": "^1.4.5",
    "msw": "^1.2.1",
    "nock": "^13.3.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
