{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.{js,jsx,ts,tsx}",
      "**/package.json",
      "**/biome.json",
      "!!**/.next",
      "!!**/node_modules",
      "!!**/workers-build",
      "!!**/dist",
      "!!**/build",
      "!!**/coverage",
      "!**/.yalc/**/*.{js,jsx,ts,tsx}",
      "!!**/x/**",
      "!!extension/shared/lib/swr.ts",
      "!!extension/packages",
      "!!**/package-lock.json",
      "lefthook.yml"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto",
    "useEditorconfig": true
  },
  "linter": {
    "includes": ["sdks/js/**", "viz/**", "extension/**"],
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useBlockStatements": "error",
        "useImportType": "error"
      },
      "nursery": {
        "noImportCycles": "error"
      },
      "style": {
        "useConst": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "html": {
    "formatter": {
      "indentScriptAndStyle": false,
      "selfCloseVoidElements": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": false
    }
  },
  "assist": {
    "includes": ["sdks/js/**", "viz/**", "extension/**"],
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "front/lib/actions/configuration/mcp.ts",
        "front/lib/actions/mcp_cached_metadata.ts",
        "front/lib/actions/mcp_internal_actions/index.ts",
        "front/lib/actions/mcp_internal_actions/servers/index.ts",
        "front/lib/actions/mcp_metadata.ts",
        "front/lib/api/actions/servers/interactive_content/index.ts",
        "front/lib/api/actions/servers/interactive_content/template_utils.ts",
        "front/lib/api/actions/servers/interactive_content/tools/index.ts",
        "front/lib/api/actions/servers/agent_copilot_agent_state/index.ts",
        "front/lib/api/actions/servers/agent_copilot_agent_state/tools/index.ts",
        "front/lib/api/actions/servers/agent_copilot_context/index.ts",
        "front/lib/api/actions/servers/agent_copilot_context/tools/index.ts",
        "front/lib/api/actions/servers/project_manager/index.ts",
        "front/lib/api/actions/servers/project_manager/tools/index.ts",
        "front/lib/api/actions/servers/skill_management/index.ts",
        "front/lib/api/actions/servers/skill_management/tools/index.ts",
        "front/lib/api/assistant/configuration/actions.ts",
        "front/lib/api/assistant/configuration/agent.ts",
        "front/lib/api/assistant/configuration/helpers.ts",
        "front/lib/api/assistant/conversation.ts",
        "front/lib/api/assistant/conversation/agent_loop.ts",
        "front/lib/api/assistant/conversation/fetch.ts",
        "front/lib/api/assistant/conversation/mentions.ts",
        "front/lib/api/assistant/conversation/title.ts",
        "front/lib/api/assistant/feedback.ts",
        "front/lib/api/assistant/global_agents/configurations/anthropic.ts",
        "front/lib/api/assistant/global_agents/configurations/dust/deep-dive.ts",
        "front/lib/api/assistant/global_agents/configurations/dust/dust.ts",
        "front/lib/api/assistant/global_agents/configurations/google.ts",
        "front/lib/api/assistant/global_agents/configurations/helper.ts",
        "front/lib/api/assistant/global_agents/configurations/mistral.ts",
        "front/lib/api/assistant/global_agents/configurations/openai.ts",
        "front/lib/api/assistant/global_agents/global_agents.ts",
        "front/lib/api/assistant/global_agents/tools.ts",
        "front/lib/api/assistant/messages.ts",
        "front/lib/api/assistant/permissions.ts",
        "front/lib/api/assistant/skill_actions.ts",
        "front/lib/notifications/workflows/conversation-unread.ts",
        "front/lib/resources/agent_mcp_action_resource.ts",
        "front/lib/resources/agent_step_content_resource.ts",
        "front/lib/resources/agent_suggestion_resource.ts",
        "front/lib/resources/internal_mcp_server_in_memory_resource.ts",
        "front/lib/resources/mcp_server_view_resource.ts",
        "front/lib/resources/skill/global/discover_tools.ts",
        "front/lib/resources/skill/global/go_deep.ts",
        "front/lib/resources/skill/global/registry.ts",
        "front/lib/resources/skill/skill_resource.ts",
        "front/types/assistant/agent_run.ts"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "noImportCycles": "off"
          }
        }
      }
    }
  ]
}
