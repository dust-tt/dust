    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug dust-api",
            "cargo": {
                "args": [
                    "build",
                    "--bin=dust-api",
                    "--manifest-path=${workspaceFolder}/core/Cargo.toml"
                ],
                "filter": {
                    "name": "dust-api",
                    "kind": "bin"
                }
            },
            "args": [],
        },
        {
            "type": "node-terminal",
            "name": "Debug Current TS File (npx tsx)",
            "request": "launch",
            "command": "npx tsx -- ${fileBasenameNoExtension}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/front/.env.local",
          },
          {
            "type": "node-terminal",
            "name": "Debug connectors server",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/connectors",
            "envFile": "${workspaceFolder}/front/.env.local",
          }
    ]
}