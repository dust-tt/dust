{
  "family": "dust-frontend",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/dust-frontend-task-role",
  "containerDefinitions": [
    {
      "name": "dust-frontend",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/dust-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "API_URL",
          "value": "https://api.dust.tt"
        },
        {
          "name": "MCP_SERVER_URL",
          "value": "https://mcp.dust.tt"
        }
      ],
      "secrets": [
        {
          "name": "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:dust/google-analytics-id-abc123"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dust-frontend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "cpu": 256,
      "memory": 512,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Project",
      "value": "dust"
    },
    {
      "key": "Service",
      "value": "frontend"
    }
  ]
}
